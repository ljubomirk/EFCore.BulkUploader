@model WebApp.ViewModels.PromotionDetailsViewModel;
@{
    ViewData["Title"] = "Promotion Details";
    /* Handling ... */

}
<div class="container">
    <div class="row">
        <h4>
            @TripleI.CouponDatabase.Properties.Resources.Promotions_TitleCreate
            <a class="waves-effect waves-light btn-flat btn-default right"><i class="material-icons">clear</i></a>
            <span class="switch right">
                <label>
                    Status(2d)
                    <input type="checkbox">
                    <span class="lever"></span>
                </label>
            </span>
        </h4>
    </div>

    <div class="row">
        <div class="row">
            <div class="input-field col s6 u-p-r-md">
                <input placeholder="" id="code" type="text" class="validate">
                <label for="code">Code</label>
            </div>
        </div>
        <div class="input-field col s6 u-p-r-md">
            <input placeholder="" type="text" id="ValidFrom" class="datepicker validate">
            <label for="ValidFrom">Valid From</label>
        </div>
        <div class="input-field col s6 u-p-l-md">
            <input placeholder="" type="text" id="ValidUntil" class="datepicker validate">
            <label for="ValidUntil">Valid Until</label>
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <p class="section-headline">Allowed Issuer</p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Salesforce</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>POS</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Telesales</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Webshop</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Selfcare</span>
                </label>
            </p>
        </div>
        <div class="col s6">
            <p class="section-headline">Allowed User</p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Salesforce</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Webshop</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Selfcare</span>
                </label>
            </p>
        </div>
    </div>


    <div class="row">
        <div class="col s12">
            <p class="section-headline u-m-b-remove">Properties</p>
        </div>
        <div class="col s6">
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Unique coupons</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Named holders</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Named consumers</span>
                </label>
            </p>
        </div>
        <div class="col s6">
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Holder is only consumer</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Allows multiple redeems</span>
                </label>
            </p>
            <p>
                <label>
                    <input type="checkbox" class="filled-in" checked="checked" />
                    <span>Allow coupon series</span>
                </label>
            </p>
        </div>
    </div>
    <div class="row">
        <a class="waves-effect waves-light btn-flat commando-primary white-text u-m-r-md"><i class="material-icons left">check</i>@TripleI.CouponDatabase.Properties.Resources.Btn_Create</a>
        <a class="waves-effect waves-light btn-flat btn-default commando-primary-text"><i class="material-icons left">arrow_forward</i> @TripleI.CouponDatabase.Properties.Resources.Btn_CreateAndAddSeries</a>

    </div>

</div>

<script>
    $(document).ready(function () {
        $('.datepicker').datepicker();
    });
</script>


