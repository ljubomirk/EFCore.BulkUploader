@model WebApp.ViewModels.PromotionDetailsViewModel;
@{
    ViewData["Title"] = "Promotion Details";
    /* Handling ... */

}
<div class="container">
    <div class="row">
        <h4>
            @TripleI.CouponDatabase.Properties.Resources.Promotions_TitleCreate
            <a class="waves-effect waves-light btn-flat btn-default right"><i class="material-icons">clear</i></a>
            <span class="switch right">
                <label>
                    Status(2d)
                    <input type="checkbox">
                    <span class="lever"></span>
                </label>
            </span>
        </h4>
    </div>
    <form>

        <div class="row">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="" id="code" type="text" class="validate">
                    <label for="code">Code</label>
                </div>
            </div>
            <div class="input-field col s6">
                <input placeholder="" type="text" id="ValidFrom" class="datepicker validate">
                <label for="ValidFrom">Valid From</label>
                <i class="material-icons suffix">event</i>
            </div>
            <div class="input-field col s6">
                <input disabled placeholder="" type="text" id="ValidUntil" class="datepicker validate">
                <label for="ValidUntil">Valid Until</label>
                <i id="icon-endDate" class="material-icons suffix disabled">event</i>
            </div>
            <div class="col s12">
                <p class="u-m-t-remove">
                    <label id="chk-endDate" >
                        <input type="checkbox" class="filled-in" />
                        <span>This promotion has a set end date</span>
                    </label>
                </p>
            </div>
            <div class="col s6">
                <p class="section-headline">Allowed Issuer</p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Salesforce</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>POS</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Telesales</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Webshop</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Selfcare</span>
                    </label>
                </p>
            </div>
            <div class="col s6">
                <p class="section-headline">Allowed User</p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Salesforce</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Webshop</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Selfcare</span>
                    </label>
                </p>
            </div>
        </div>


        <div class="row">
            <div class="col s12">
                <p class="section-headline u-m-b-remove">Properties</p>
            </div>
            <div class="col s6">
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Unique coupons</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Named holders</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Named consumers</span>
                    </label>
                </p>
            </div>
            <div class="col s6">
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Holder is only consumer</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Allows multiple redeems</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input type="checkbox" class="filled-in" checked="checked" />
                        <span>Allow coupon series</span>
                    </label>
                </p>
            </div>
        </div>
        <div class="row">
            <a class="waves-effect waves-light btn-flat commando-primary white-text u-m-r-md"><i class="material-icons left">check</i>@TripleI.CouponDatabase.Properties.Resources.Btn_Create</a>
            <a class="waves-effect waves-light btn-flat btn-default commando-primary-text"><i class="material-icons left">arrow_forward</i> @TripleI.CouponDatabase.Properties.Resources.Btn_CreateAndAddSeries</a>

        </div>
    </form>

</div>

<script>
    $(document).ready(function () {
        // init date picker
        $('.datepicker').datepicker({
            //defaultDate: new Date(),
            minDate: new Date(),
            setDefaultDate: true,
            selectMonths: true,
            selectYears: 200,
            format: "dd/mm/yyyy"
        });

        // enable end date input field
        $("label#chk-endDate").click(function () {
            if ($("input", this).prop("checked")) {
                $("#ValidUntil").attr("disabled", false);
                $("#icon-endDate").removeClass("disabled");
            }
            else {
                $("#ValidUntil").attr("disabled", true);
                $("#icon-endDate").addClass("disabled");
            }
        })
    });

</script>


